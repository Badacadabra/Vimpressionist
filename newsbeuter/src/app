# ============================
# APP-WIDE
# ============================

# ----------------------------
# Main
# ----------------------------

text-width 0
show-keymap-hint no
swap-title-and-hints yes
confirm-exit yes

browser w3m
user-agent ""
http-auth-method any

html-renderer "w3m -dump -T text/html"
pager "w3m %f"
external-url-viewer "w3m"

# ----------------------------
# Useful files
# ----------------------------

#Â urls-source "~/.newsbeuter/urls"
cookie-cache "~/.newsbeuter/cookies.txt"
cache-file "~/.newsbeuter/cache.db"
error-log "~/.newsbeuter/error.log"

# ----------------------------
# Notifications
# ----------------------------

notify-format "RSS: %f unread feeds (%n unread articles)"
notify-program notify-send
notify-always no
notify-screen no
notify-xterm yes
notify-beep no

# ----------------------------
# Proxy
# ----------------------------

use-proxy no

proxy n/a
proxy-auth n/a
proxy-auth-method any
proxy-type http
